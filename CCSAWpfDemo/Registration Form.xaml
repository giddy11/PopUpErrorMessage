<Window Background="BlanchedAlmond" x:Class="CCSAWpfDemo.Registration_Form"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CCSAWpfDemo" 
        xmlns:views="clr-namespace:CCSAWpfDemo.Views"
        mc:Ignorable="d"
        Title="Registration_Form" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <!--Header-->
        <DockPanel LastChildFill="False">
            <TextBlock Text="Registration:" DockPanel.Dock="Left" Height="30" VerticalAlignment="Top" Margin="15 10" FontSize="20" FontWeight="Medium"/>
            <TextBlock DockPanel.Dock="Right" Margin="50,10" Height="30" VerticalAlignment="Top" FontWeight="Medium" FontSize="20">
                <Hyperlink>Login</Hyperlink>
            </TextBlock>
        </DockPanel>

        <!--Main Form-->
        <views:MainFormView Grid.Row="1"/> 
    </Grid>
</Window>
